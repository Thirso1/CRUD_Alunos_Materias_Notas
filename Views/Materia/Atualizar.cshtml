@model CRUD_AlunosMateriasNotas.Models.Materia
@{
    ViewData["Title"] = "Atualizar Matéria";
}
<form method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-8">

                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <h4 class="card-title mt-2">Atualizar Aluno</h4>
                            </header>
                            <article class="card-body">
                                @*@{
                                await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml");
                                }*@
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nome">Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="">
                                        <input type="hidden" asp-for="Id">
                                        <span asp-validation-for="Nome"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Descricao">Descricao</label>
                                    <input type="text" asp-for="Descricao" class="form-control" placeholder="">
                                    <span asp-validation-for="Descricao"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Atualizar </button>
                                </div>
                            </article>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>
