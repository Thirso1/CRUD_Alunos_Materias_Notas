@model CRUD_AlunosMateriasNotas.Models.Nota
@{
    ViewData["Title"] = "Cadastro de Nota";
}
<form method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-8">

                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <h4 class="card-title mt-2">Cadastro de Nota</h4>
                            </header>
                            <article class="card-body">
                                @*@{
                                await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml");
                                }*@
                                <div class="form-row">
                                        <div class="form-group col-md-6">
                                        <label for="AlunoId">Aluno</label>
                                        <select for="AlunoId" class="form-control" id="AlunoId" name="AlunoId" asp-items="@ViewBag.Alunos" required>
         
                                         </select>
                                        <span asp-validation-for="AlunoId"></span>
                                        </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="MateriaId">Matérias</label>
                                        <select for="Model.MateriaId" class="form-control" id="MateriaId" name="MateriaId" asp-items="@ViewBag.Materias" required>
                 
                                        </select>
                                        <span asp-validation-for="MateriaId"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Valor">Nota</label>
                                    <input type="number" asp-for="Valor" dinheiro min="0.00" max="10.00" step=".01" class="form-control" placeholder="Digite a Nota" required>
                                    <span asp-validation-for="Valor"></span>
                                    <span asp-validation-for="Valor"></span>
                                </div>
                                <div class="form-group">

                                    <label for="Data">Data</label>
                                    <input type="date" id="data" name="data" class="form-control" value="@ViewBag.Data" required>
                                    <span asp-validation-for="Data"></span>
                                </div>

                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div>
                            </article>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>
